---
import { Image } from 'astro:assets';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-16">
  <!-- Video Background -->
  <div class="absolute inset-0 z-0">
    <video 
      class="w-full h-full object-cover"
      autoplay 
      loop 
      muted 
      playsinline
      poster="/images/hero-poster.webp"
    >
      <source src="/videos/detailing.webm" type="video/webm">
      <source src="/videos/detailing.mp4" type="video/mp4">
    </video>
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 text-center text-white">
    <h1 class="text-4xl md:text-6xl font-bold mb-6">
      Professional Auto Detailing in <span class="text-primary-400">Your City</span>
    </h1>
    <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto">
      Transform your vehicle with our premium detailing services. 
      Expert care and attention to detail that makes your car look showroom new.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href="/contact#book" 
        class="px-8 py-4 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors text-lg font-semibold"
      >
        Book Now
      </a>
      <a 
        href="/services" 
        class="px-8 py-4 bg-white text-gray-900 rounded-lg hover:bg-gray-100 transition-colors text-lg font-semibold"
      >
        View Services
      </a>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      class="h-8 w-8 text-white" 
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M19 14l-7 7m0 0l-7-7m7 7V3"
      />
    </svg>
  </div>
</section>